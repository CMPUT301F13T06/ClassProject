<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_text_illustration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editTextIllustration"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_gravity="top|left|fill_horizontal"
        android:layout_weight="0.36"
        android:ems="10"
        android:gravity="center_vertical|top"
        android:hint="@string/hint_text_field"
        android:inputType="textMultiLine|textCapSentences" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/Button_SaveEditText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/Button_SaveEditText" />

</RelativeLayout>